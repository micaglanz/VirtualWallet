<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bienvenido - VirtualWallet</title>
  <link rel="stylesheet" href="/style.css" />
  <style>
    .fade-out {
      opacity: 0;
      transition: opacity 1s ease-out;
    }
  </style>
</head>
<body>
  <!-- Navbar superior -->
  <nav class="navbar">
    <a href="/">
      <img src="/logo.png" alt="Logo Wallet" class="logo" />
    </a>
    <div class="user-menu" onclick="toggleMenu()">
      <img src="/user.png" alt="Usuario" class="user-avatar" />
      <div class="dropdown-menu" id="dropdown-menu">
        <a href="/profile">Perfil</a>
        <a href="/dashboard">Dashboard</a>
        <form action="/logout" method="POST" style="margin: 0;">
          <button type="submit">Cerrar sesión</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Sidebar lateral izquierdo -->
  <nav class="sidebar">
    <h2>Mis Tarjetas</h2>
    <div class="saldo-box">
      <h3>Saldo disponible</h3>
      <p>CVU: <%= current_user.account.cvu %></p>
      <p>Saldo: $<%= current_user.account.balance %></p>
    </div>
  </nav>

  <!-- Contenido principal -->
  <div class="main-content">
    <div class="login-box welcome-box" id="welcome-box">
      <h1>Bienvenido, <%= user.name %>!</h1>
      <p>Has iniciado sesión correctamente en VirtualWallet.</p>
    </div>
  </div>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('dropdown-menu');
      if (menu.style.display === 'block') {
        menu.style.display = 'none';
      } else {
        menu.style.display = 'block';
      }
    }

    document.addEventListener('click', function(event) {
      const userMenu = document.querySelector('.user-menu');
      const menu = document.getElementById('dropdown-menu');
      if (!userMenu.contains(event.target)) {
        menu.style.display = 'none';
      }
    });

    // Fade-out del mensaje de bienvenida
    window.addEventListener('DOMContentLoaded', () => {
      const welcomeBox = document.getElementById('welcome-box');
      setTimeout(() => {
        welcomeBox.classList.add('fade-out');
        setTimeout(() => {
          welcomeBox.remove();
        }, 1000);
      }, 1000); // Esperar 1 segundo antes de iniciar el fade
    });
  </script>
</body>
</html>
